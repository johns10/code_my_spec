#!/bin/bash
# Start a CodeMySpec agent task session.
# Must be sourced to persist the session ID env var: source CodeMySpec/scripts/cms-start -t spec -m MyApp.Accounts
#
# Options are passed through to start-agent-task:
#   -t, --session-type  Session type (spec, component_code, component_test, etc.)
#   -m, --module-name   Component module name

export CODE_MY_SPEC_SESSION_ID=$(uuidgen | tr '[:upper:]' '[:lower:]')
MIX_ENV=cli mix cli start-agent-task -s "$CODE_MY_SPEC_SESSION_ID" "$@"
